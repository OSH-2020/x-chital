proj_name=rvisor_kernel

obj-m := rvisor.o
rvisor-objs := $(proj_name).rust.o

CARGO ?= cargo

$(src)/target/x86_64-linux-kernel/debug/lib$(proj_name).a: $(src)/Cargo.toml $(wildcard $(src)/src/*.rs $(src)/src/*/*.rs $(src)/src/*/*/*.rs) $(src)/linux-kernel-module-rust/build.rs
	cd $(src); env -u MAKE -u MAKEFLAGS $(CARGO) build -Z build-std=core,alloc --target=x86_64-linux-kernel

%.rust.o: target/x86_64-linux-kernel/debug/lib%.a
	$(LD) -r -o $@ --whole-archive $<

$(src)/linux-kernel-module-rust/build.rs: $(wildcard $(src)/src/cshim/*.c $(src)/src/cshim/*/*.c $(src)/src/cshim/*/*.c)
	echo " " >> $(src)/linux-kernel-module-rust/build.rs
